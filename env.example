# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Jackpot Threshold Settings (for Lucky Day Lotto only)
# Note: Per-game thresholds are configured in config.json
# These are fallback defaults if not specified per-game
MIN_JACKPOT_THRESHOLD=500000
JACKPOT_STEP_INCREMENT=50000

# Purchase Decision Settings
EV_THRESHOLD=-0.20
ENABLE_PURCHASE_AUTOMATION=false
BROWSER_TYPE=chromium

# Application Settings
RUN_MODE=development
LOG_LEVEL=INFO

# Illinois Lottery Website
IL_LOTTERY_URL=https://www.illinoislottery.com

# Scraping Method (if requests fails with 403, set to true)
USE_PLAYWRIGHT_SCRAPING=false
